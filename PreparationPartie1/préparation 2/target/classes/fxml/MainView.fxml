<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projet.javafx.controller.MainController">
   <left>
      <VBox prefHeight="600.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Gestion Stock" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" left="10.0" top="20.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="btnProduit" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowProduit" style="-fx-background-color: #34495e; -fx-text-fill: white;" text="Gestion Produits">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="btnCatalogue" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowCatalogue" style="-fx-background-color: #34495e; -fx-text-fill: white;" text="Gestion Catalogues">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="btntest" mnemonicParsing="false" onAction="#handleShowProduit" text="Button" textAlignment="CENTER" underline="true" />
         </children>
      </VBox>
   </left>
</BorderPane>
